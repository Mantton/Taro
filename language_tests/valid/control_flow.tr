// Test: Control flow statements

func absolute(x: int32) -> int32 {
    if x < 0 {
        return -x
    }
    return x
}

func grade(score: int32) -> rune {
    return if score >= 90 {
        'A'
    } else if score >= 80 {
        'B'
    } else if score >= 70 {
        'C'
    } else {
        'F'
    }
}

func sumToN(n: int32) -> int32 {
    var sum = 0
    var i = 1
    while i <= n {
        sum = sum + i
        i = i + 1
    }
    return sum
}

func main() {
    let a = absolute(x: -5)
    let g = grade(score: 85)
    let s = sumToN(n: 10)
}
