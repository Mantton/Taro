// Test: Compound assignment operators on integers.

func main() {
    var x: int32 = 16
    x -= 1
    assert(x == 15, "-=")

    x /= 3
    assert(x == 5, "/=")

    x %= 3
    assert(x == 2, "%=")

    x |= 4
    assert(x == 6, "|=")

    x ^= 3
    assert(x == 5, "^=")

    x &= 3
    assert(x == 1, "&=")

    x <<= 2
    assert(x == 4, "<<=")

    x >>= 1
    assert(x == 2, ">>=")

    std.print("PASS: compound assignment matrix\n")
}
