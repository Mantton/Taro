// Test: Const Generics Array Len
// Checks inferring const generic length from array argument.

func main() {
    let a: [bool; 10] = [true; 10]
    let b = a.len()
    let c = array_len(&a)

    if b == c {
        assert(true, "Length matches")
    } else {
        assert(false, "Length mismatch")
    }
    
    assert(c == 10, "Correct length extracted")
    std.print("PASS: Const generic array len\n")
}

func array_len[T, const N: usize](_ arr: &[T; N]) -> usize {
    N  // The const generic IS the length
}
