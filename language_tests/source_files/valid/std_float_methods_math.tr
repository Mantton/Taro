func approxEq(_ a: double, _ b: double, _ eps: double) -> bool {
    (a - b).abs() <= eps
}

func main() {
    let eps: double = 0.000001

    assert(approxEq(9.0.sqrt(), 3.0, eps), "sqrt")
    assert(approxEq(0.0.sin(), 0.0, eps), "sin")
    assert(approxEq(0.0.cos(), 1.0, eps), "cos")
    assert(approxEq(0.0.tan(), 0.0, eps), "tan")

    assert(approxEq(0.0.exp(), 1.0, eps), "exp")
    assert(approxEq(3.0.exp2(), 8.0, eps), "exp2")
    assert(approxEq(1.0.log(), 0.0, eps), "log")
    assert(approxEq(8.0.log2(), 3.0, eps), "log2")
    assert(approxEq(100.0.log10(), 2.0, eps), "log10")

    assert(approxEq(3.7.floor(), 3.0, eps), "floor")
    assert(approxEq(3.2.ceil(), 4.0, eps), "ceil")
    assert(approxEq((-3.7).trunc(), -3.0, eps), "trunc")
    assert(approxEq(2.3.round(), 2.0, eps), "round")
    assert(approxEq(2.5.roundeven(), 2.0, eps), "roundeven")

    assert(approxEq(2.0.pow(3.0), 8.0, eps), "pow")
    assert(approxEq(2.0.powi(3), 8.0, eps), "powi")
    assert(approxEq(3.0.copysign(-1.0), -3.0, eps), "copysign")
    assert(approxEq(2.0.fma(3.0, 4.0), 10.0, eps), "fma")
    assert(approxEq(2.0.minimum(3.0), 2.0, eps), "minimum")
    assert(approxEq(2.0.maximum(3.0), 3.0, eps), "maximum")
    assert(approxEq(2.0.minimumnum(3.0), 2.0, eps), "minimumnum")
    assert(approxEq(2.0.maximumnum(3.0), 3.0, eps), "maximumnum")

    let xf: float = 9.0
    let yf: float = xf.sqrt()
    assert(yf == 3.0, "float sqrt")

    print("std_float_methods_math: PASS\n")
}
