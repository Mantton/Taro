func main() {
    var value: int32 = 1

    let ptr: *mut int32 = unsafe { &mut value as *mut int32 }
    let ptr_add = ptr.add(0)
    let ptr_sub = ptr_add.sub(0)
    let ptr_off = ptr_sub.offset(0)

    ptr_off.write(42)
    assert(value == 42, "*mut add/sub/offset chain should stay writable")
    assert(ptr_off.read() == 42, "read after write should return updated value")

    print("pointer mut write arithmetic ok\n")
}
