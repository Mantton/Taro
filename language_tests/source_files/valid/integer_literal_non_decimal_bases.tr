// Test: non-decimal integer literals should lower correctly across all supported bases.

func main() {
    let hex: uint64 = 0xDEADBEEF
    assert(hex == 3735928559, "hex literal should parse")

    let hex_sep: uint64 = 0xFF_FF
    assert(hex_sep == 65535, "hex literal with separators should parse")

    let max_u64_hex: uint64 = 0xffff_ffff_ffff_ffff
    assert(max_u64_hex == 18446744073709551615, "max uint64 hex should parse")

    let bin: uint32 = 0b10101010
    assert(bin == 170, "binary literal should parse")

    let bin_sep: uint32 = 0b1010_0101
    assert(bin_sep == 165, "binary literal with separators should parse")

    let oct: uint32 = 0o755
    assert(oct == 493, "octal literal should parse")

    let oct_sep: uint32 = 0o7_5_5
    assert(oct_sep == 493, "octal literal with separators should parse")

    std.print("PASS: non-decimal integer literals\n")
}
